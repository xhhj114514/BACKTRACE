{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "cmake",
            "command": "build",
        },
        {
            "label":"Clean Build File",
            "type":"shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "clean"
            ],
            "group": "build",
            "presentation":{
                "reveal":"always",
                "panel":"new"
            },
            "problemMatcher":[]
        },
        {
            "label": "Configure All Projects",//Must Be Done after "Remove CMake Cache"
            "type": "cmake",
            "command": "configure",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label":"Remove CMake Cache",
            "type":"shell",
            "command": "Remove-Item -Recurse -Force ${workspaceFolder}/build",
        },
        {
            "label": "Generate Symbol Table",
            "type": "shell",
            "command": "python3 DBG/Tools/DBGTOOLS.py build/Debug/${workspaceFolderBasename}.elf DBG/Tools/symbol_table.c",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
		{
			"label": "Flash with OpenOCD",
			"type": "shell",
			"command": "openocd",
			"args": [
				"-f",
                "${workspaceFolder}/openocd.cfg",
                "-c",
                "program ./build/Debug/${workspaceFolderBasename}.elf verify reset exit"
			],
            "dependsOn": "build",
			"problemMatcher": [],
		},
        {
            "label": "Flash AND Start Debug",
            "type": "shell",
            "command": "Ozone",//需要添加Ozone到环境变量
            "args": [
                "${workspaceFolder}\\DBG\\DBG.jdebug",
            ],
            // "dependsOn": "Flash with OpenOCD",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Copy compile_commands",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/build/Debug/compile_commands.json",
                "${workspaceFolder}/compile_commands.json"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },        
        {
            "label": "FINAL FLASH With Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Remove CMake Cache",
                "Configure All Projects",
                "build",
                // "Generate Symbol Table",
                // "build",
                "Copy compile_commands"
            ],
			"command": "openocd",
			"args": [
				"-f",
                "${workspaceFolder}/openocd.cfg",
                "-c",
                "program ./build/Debug/${workspaceFolderBasename}.elf verify reset exit"
			],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "label": "FINAL FLASH NORMAL",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "Copy compile_commands"
            ],
			"command": "openocd",
			"args": [
				"-f",
                "${workspaceFolder}/openocd.cfg",
                "-c",
                "program ./build/Debug/${workspaceFolderBasename}.elf verify reset exit"
			],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        }
    ]
}